<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_back"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#FEFFFF"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:elevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/TvEncryption1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Encryption 1"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:layout_marginLeft="15dp" />

                    <Button
                        android:id="@+id/btnEdit"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:visibility="gone"
                        android:text="RECREATE"
                        android:textColor="#ffffff"
                        android:layout_toLeftOf="@id/btnCreate"
                        android:background="@drawable/roundbutton" />

                    <Button
                        android:id="@+id/btnCreate"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:text="View"
                        android:background="@drawable/roundbutton"
                        android:textColor="#ffffff" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/colorGrey" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/TvEncryption2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Encryption 2"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                    <Button
                        android:id="@+id/btnEdit1"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:text="RECREATE"
                        android:visibility="gone"
                        android:textColor="#f2f2f2"
                        android:layout_toLeftOf="@id/btnView1"
                        android:background="@drawable/roundbutton"
                        />

                    <Button
                        android:id="@+id/btnView1"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:text="Create"
                        android:background="@drawable/roundbutton"
                        android:textColor="#ffffff" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/colorGrey" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/TvEncryption3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Encryption 3"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btnEdit2"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:text="RECREATE"
                        android:visibility="gone"
                        android:textColor="#ffffff"
                        android:layout_toLeftOf="@id/btnView2"
                        android:background="@drawable/roundbutton"
                        />

                    <Button
                        android:id="@+id/btnView2"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:text="Create"
                        android:background="@drawable/roundbutton"
                        android:textColor="#ffffff" />
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/colorGrey" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>